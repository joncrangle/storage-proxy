{
	"name": "storage-proxy",
	"version": "0.2.0",
	"description": "Authenticated proxy for Azure Blob Storage or AWS S3 Buckets with Microsoft Entra ID",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/joncrangle/storage-proxy.git"
	},
	"type": "module",
	"scripts": {
		"build": "bun build src/server.ts --outdir dist",
		"start": "cross-env NODE_ENV=production bun ./dist/server.js",
		"dev:services": "concurrently -n AZ,MOTO -c magenta,cyan \"bun run azurite\" \"bun run moto\"",
		"dev:wait": "wait-on http://127.0.0.1:4566/ tcp:10000",
		"dev:nodemon": "bun run --hot ./src/server.ts",
		"dev:storage": "bun run mock/prepopulate.ts",
		"dev": "concurrently -n SERVICES,WAIT,NODE -c yellow,gray,green -k \"bun run dev:services\" \"bun run dev:wait && bun run dev:nodemon\"",
		"lint": "biome lint --write ./src",
		"format": "biome format --write ./src",
		"azurite": "azurite --loose --skipApiVersionCheck --disableTelemetry --location ./AzuriteConfig --debug ./AzuriteConfig/debug.log",
		"moto": "uvx --from moto[server] moto_server -H 0.0.0.0 -p 4566",
		"test": "cross-env NODE_ENV=test DB_PATH=test-storage-proxy.sqlite3 concurrently --success=first --kill-others -n SERVICES,TEST -c yellow,green \"bun run drizzle-kit push && bun run --silent dev:services\" \"bun run --silent dev:storage && bun run --silent dev:wait && bun test tests/app.test.ts\""
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.859.0",
		"@azure/storage-blob": "^12.28.0",
		"@hono/zod-validator": "^0.7.2",
		"@scalar/hono-api-reference": "^0.9.13",
		"better-auth": "^1.3.4",
		"better-sqlite3": "^12.2.0",
		"drizzle-orm": "^0.44.4",
		"hono": "^4.8.12",
		"hono-openapi": "^1.0.3",
		"hono-rate-limiter": "^0.4.2",
		"lru-cache": "^11.1.0",
		"pino": "^9.7.0",
		"pino-pretty": "^13.1.1",
		"zod-openapi": "^5.3.0"
	},
	"peerDependencies": {
		"typescript": "^5.8.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"@types/bun": "^1.2.19",
		"@types/jsonwebtoken": "^9.0.10",
		"azurite": "^3.35.0",
		"concurrently": "^9.2.0",
		"cross-env": "^10.0.0",
		"drizzle-kit": "^0.31.4",
		"drizzle-seed": "^0.3.1",
		"nodemon": "^3.1.10",
		"wait-on": "^8.0.4",
		"zod": "^4.0.14"
	}
}
